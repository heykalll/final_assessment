{
    "compilerOptions": {
        "lib": [
            "dom",
            "es2015",
            "es2016",
            "es6",
            "es2017"
        ],
        "target": "es2017",
        "module": "es6",
        "allowSyntheticDefaultImports": true,
        "baseUrl": ".",
        "paths": {
            "@config": ["swift.config.js"],
            "@core_modules/*": ["core/modules/*"],
            "@root/*": ["*"],
            "@core/*": ["core/*"],
            "@core_minicart": ["core/modules/cart/plugin/mini"],
            "@custom/*": ["src/custom/*"],

            "@middlewares/*": ["core/middlewares/*"],
            "@middleware_route": ["core/middlewares/route"],

            "@services/*": ["core/services/*"],
            "@extension": ["extension/*"],
            "@extension_module": ["extension/modules/*"],
            "@next_headcustom": ["core/nextjs_custom/HeadCustom"],
            "@next_nextscriptcustom": ["core/nextjs_custom/NextScriptCustom"],
            "@graphql_request": ["core/api/graphql/request"],

            "@lib/*": ["core/lib/*"],
            "@lib_apollo": ["core/lib/apollo"],
            "@lib_gtag": ["core/lib/gtag"],
            "@lib_firebase/*": ["core/lib/firebase/*"],
            "@i18n": ["core/lib/i18n"],

            "@layout" : ["core/modules/theme/layout"],
            "@layout_customer":["core/modules/customer/components/layout"],

            "@theme/*":[ "core/theme/*"],
            "@theme_color": ["core/theme/colors"],
            "@theme_mixins": ["core/theme/mixins"],
            "@theme_theme": ["core/theme/theme"],
            "@theme_typography":[ "core/theme/typography"],
            "@theme_vars":["core/theme/vars"],

            "@helpers/*": ["core/helpers/*"],
            "@helper_auth": ["core/helpers/auth"],
            "@helper_cartid": ["core/helpers/cartId"],
            "@helper_checkcomponents": ["core/helpers/checkComponent"],
            "@helper_checkimagesrc": ["core/helpers/checkImageSrc"],
            "@helper_config": ["core/helpers/config"],
            "@helper_cookies": ["core/helpers/cookies"],
            "@helper_currency": ["core/helpers/currency"],
            "@helper_date": ["core/helpers/date"],
            "@helper_encryption": ["core/helpers/encryption"],
            "@helper_fonts": ["core/helpers/fonts"],
            "@helper_generatequery": ["core/helpers/generateQuery"],
            "@helper_getpath": ["core/helpers/getPath"],
            "@helper_noreload": ["core/helpers/noReload"],
            "@helper_passwordstrength": ["core/helpers/passwordStrength"],
            "@helper_productbyvariant": ["core/helpers/productByVariant"],
            "@helper_regex": ["core/helpers/regex"],
            "@helper_text": ["core/helpers/text"],
            "@helper_theme": ["core/helpers/theme"],
            "@helper_urlparser": ["core/helpers/urlParser"],
            "@helper_zxcvbn": ["core/helpers/zxcvbn"],
            "@helper_localstorage": ["core/helpers/localstorage"],

            "@common_button": ["core/modules/commons/Button"],
            "@common_buttonqty": ["core/modules/commons/ButtonQty"],
            "@common_breadcrumb": ["core/modules/commons/Breadcrumb"],
            "@common_confirmdialog": ["core/modules/commons/ConfirmDialog"],
            "@common_dropfile": ["core/modules/commons/DropFile"],
            "@common_googlemaps": ["core/modules/commons/GoogleMaps"],
            "@common_gridlist": ["core/modules/commons/GridList"],
            "@common_priceformat": ["core/modules/commons/PriceFormat"],
            "@common_ratingstar": ["core/modules/commons/RatingStar"],
            "@common_tabs": ["core/modules/commons/Tabs"],
            "@common_toast": ["core/modules/commons/Toast"],
            "@common_typography": ["core/modules/commons/Typography"],
            "@common_checkbox": ["core/modules/commons/CheckBox"],
            "@common_password": ["core/modules/commons/Password"],
            "@common_radio": ["core/modules/commons/Radio"],
            "@common_rangeslider": ["core/modules/commons/RangeSlider"],
            "@common_select": ["core/modules/commons/Select"],
            "@common_textfield": ["core/modules/commons/TextField"],
            "@common_carousel": ["core/modules/commons/carousel"],
            
            "@common_image": ["core/modules/commons/Image"],
            "@common_image/*": ["core/modules/commons/Image/*"],

            "@common_backdrop": ["core/modules/commons/Backdrop"],
            "@common_pageprogress": ["core/modules/commons/PageProgress"],
            "@common_slick/*": ["core/modules/commons/Slick/*"],
            "@common_slider/*": ["core/modules/commons/Slider/*"],
            "@common_filterdialog": ["core/modules/commons/FilterDialog"],
            "@common_forms/*": ["core/modules/commons/Forms/*"],

            "@common_searchmodal": ["core/modules/commons/SearchModal"],
            "@common_loaders": ["core/modules/commons/Loaders"],
            "@common_searchmodal/*": ["core/modules/commons/SearchModal/*"],
            "@common_loaders/*": ["core/modules/commons/Loaders/*"],

            "@common_navigation": ["core/modules/commons/Navigation"],
            "@common_spancategory": ["core/modules/commons/SpanCategory"],
            "@common_span": ["core/modules/commons/Span"],
            "@common_skeleton": ["core/modules/commons/Skeleton"],
            "@common_scrolltotop": ["core/modules/commons/ScrollToTop"],
            "@common_headermobile": ["src/modules/theme/components/header/mobile"],
            "@common_headerdesktop": ["src/modules/theme/components/header/desktop"],
            "@common_currency": ["core/modules/setting/components/currency"],
            "@common_language": ["core/modules/setting/components/language"],
            "@common_bottomnavigation": ["core/modules/theme/components/bottom-navigation/mobile"],
            "@common_footer": ["core/modules/theme/components/footer/desktop"],
            "@common_productlabel": ["core/modules/commons/ProductLabel"],
            "@common_optionconfigurable": ["core/modules/commons/OptionConfigurable"],

            "@plugin_summary": ["core/modules/cart/plugin/Summary"],
            "@plugin_addressform": ["core/modules/customer/plugins/AddressFormDialog"]
        }
    },
    "exclude": ["node_modules"]
}
